// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Our model for storing weather search records
model WeatherLog {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // User input
  location     String
  startDate    DateTime
  endDate      DateTime

  // Data we retrieve and store
  latitude     Float
  longitude    Float
  weatherData  Json     // Store the raw forecast JSON from the API
}